rules_version = '2';

// Firestore Security Rules for HelloCare.
// Kept in sync with lib/firestore/collections.ts paths.
// Deploy with: firebase deploy --only firestore:rules

service cloud.firestore {
  match /databases/{database}/documents {

    // User-private data: only the owner can read/write.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /users/{userId}/healthNotes/{docId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.data.userId == request.auth.uid;
    }
    match /users/{userId}/actionItems/{docId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.data.userId == request.auth.uid;
    }
    match /users/{userId}/sessionMetadata/{docId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null && request.auth.uid == userId
        && request.resource.data.userId == request.auth.uid;
    }
  }
}
